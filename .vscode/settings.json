{
	"search.exclude": {
		"**/node_modules": true
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"files.associations": {
		"*.test.ts": "typescript"
	},
	"jest.jestCommandLine": "pnpm run jest",
	"jest.autoRun": "off",
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit"
	},
	"editor.formatOnSave": false,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"hide-files.files": []
}
